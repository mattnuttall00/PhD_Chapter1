@article{obidzinski_taking_2015,
	title = {Taking the {Bitter} with the {Sweet}: {Sugarcane}'s {Return} as a {Driver} of {Tropical} {Deforestation}},
	volume = {8},
	copyright = {Copyright and Photocopying: © 2015 The Authors. Conservation Letters published by Wiley Periodicals, Inc., This is an open access article under the terms of the Creative Commons Attribution License, which permits use, distribution and reproduction in any medium, provided the original work is properly cited.},
