	journal = {Biological Conservation},
	author = {Álvarez-Romero, Jorge G. and Mills, Morena and Adams, Vanessa M. and Gurney, Georgina G. and Pressey, Robert L. and Weeks, Rebecca and Ban, Natalie C. and Cheok, Jessica and Davies, Tammy E. and Day, Jon C. and Hamel, Mélanie A. and Leslie, Heather M. and Magris, Rafael A. and Storlie, Collin J.},
