	pages = {4032--4040}
}

@article{jucker_drivers_2016,
	title = {Drivers of aboveground wood production in a lowland tropical forest of {West} {Africa}: teasing apart the roles of tree density, tree diversity, soil phosphorus, and historical logging},
	volume = {6},
	issn = {2045-7758},
	shorttitle = {Drivers of aboveground wood production in a lowland tropical forest of {West} {Africa}},
