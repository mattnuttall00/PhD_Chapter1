	month = jan,
	year = {2016},
	keywords = {biodiversity, refugia, species distribution, Arabian Peninsula, biogeographical barriers, centre of endemism, marine biogeography, palaeoclimate, Pleistocene},
	pages = {13--30}
}

@article{rosvold_perennial_2016,
	title = {Perennial ice and snow-covered land as important ecosystems for birds and mammals},
