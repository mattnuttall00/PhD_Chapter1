	number = {1},
	urldate = {2015-12-10},
	journal = {Global Change Biology},
	author = {Mock, Thomas and Daines, Stuart J. and Geider, Richard and Collins, Sinead and Metodiev, Metodi and Millar, Andrew J. and Moulton, Vincent and Lenton, Timothy M.},
	month = jan,
	year = {2016},
	keywords = {evolution, genomics, microbes, modelling, ocean},
	pages = {61--75}
}

@article{madin_human_2016,
