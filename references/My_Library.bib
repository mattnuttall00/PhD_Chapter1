@article{ayebare_conservation_2018,
	title = {Conservation of the endemic species of the {Albertine} {Rift} under future climate change},
	volume = {220},
	issn = {0006-3207},
	url = {http://www.sciencedirect.com/science/article/pii/S0006320717311539},
