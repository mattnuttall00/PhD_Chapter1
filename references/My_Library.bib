	author = {Knight, Andrew T. and Cowling, Richard M. and Difford, Mark and Campbell, Bruce M.},
	year = {2010},
	keywords = {conservation planning, conservation opportunity, investigación social, oportunidad de conservación, social research, systematic conservation assessment, area selection, evaluación sistemática de la conservación, planificación de la conservación, selección de área},
	pages = {1348--1358}
}

@article{bryan_comparing_2011,
