	author = {Boshoff, A. F. and Kerley, G. I. H. and Cowling, R. M.},
	year = {2001},
	keywords = {South Africa, scale, species distribution, systematic conservation planning, broad habitat unit, stocking rates, foraging},
	pages = {29--43}
}

@article{bower_making_nodate,
