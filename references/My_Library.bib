	author = {Filbee‐Dexter, Karen and Symons, Celia C. and Jones, Kristal and Haig, Heather A. and Pittman, Jeremy and Alexander, Steven M. and Burke, Matthew J.},
	month = sep,
	year = {2018},
	keywords = {natural resource management, social–ecological system, eutrophication, ecological surprise, fishery collapse, mountain pine beetle, spatial temporal mismatch, structural equation model},
	pages = {2135--2146}
}

