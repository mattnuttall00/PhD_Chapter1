	journal = {Global Change Biology},
	author = {Reid, Philip C. and Hari, Renata E. and Beaugrand, Grégory and Livingstone, David M. and Marty, Christoph and Straile, Dietmar and Barichivich, Jonathan and Goberville, Eric and Adrian, Rita and Aono, Yasuyuki and Brown, Ross and Foster, James and Groisman, Pavel and Hélaouët, Pierre and Hsu, Huang-Hsiung and Kirby, Richard and Knight, Jeff and Kraberg, Alexandra and Li, Jianping and Lo, Tzu-Ting and Myneni, Ranga B. and North, Ryan P. and Pounds, J. Alan and Sparks, Tim and Stübi, René and Tian, Yongjun and Wiltshire, Karen H. and Xiao, Dong and Zhu, Zaichun},
