	journal = {Biological Conservation},
	author = {Whytock, Robin C. and Morgan, Bethan J. and Awa, Taku and Bekokon, Zacharie and Abwe, Ekwoge A. and Buij, Ralph and Virani, Munir and Vickery, Juliet A. and Bunnefeld, Nils},
