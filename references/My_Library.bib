	author = {Ban, Natalie Corinna and Klein, Carissa Joy},
	year = {2009},
	keywords = {marine protected areas, marine conservation, systematic conservation planning, Conservation area design, marine reserves, human activities, socioeconomic data},
	pages = {206--215}
}

@article{hughes_have_2018,
	title = {Have {Indo}-{Malaysian} forests reached the end of the road?},
