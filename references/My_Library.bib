	urldate = {2018-06-29},
	journal = {Conservation Biology},
	author = {Knight, Andrew T. and Driver, Amanda and Cowling, Richard M. and Maze, Kristal and Desmet, Philip G. and Lombard, Amanda T. and Rouget, Mathieu and Botha, Mark A. and Boshoff, Andre F. and Castley, J. Guy and Goodman, Peter S. and Mackinnon, Kathy and Pierce, Shirley M. and Sims‐Castley, Rebecca and Stewart, Warrick I. and Hase, Amrei Von},
	year = {2006},
	keywords = {conservation planning, planificación de la conservación, adaptive improvement, conservation-area selection, instituciones de aprendizaje social, mejoramiento adaptativo, modelo operacional, operational model, selección de áreas de conservación, social learning institutions},
