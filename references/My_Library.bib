	author = {Gaos, Alexander R. and Lewison, Rebecca L. and Liles, Michael J. and Gadea, Velkiss and Altamirano, Eduardo and Henríquez, Ana V. and Torres, Perla and Urteaga, José and Vallejo, Felipe and Baquero, Andres and LeMarie, Carolina and Muñoz, Juan Pablo and Chaves, Jaime A. and Hart, Catherine E. and Peña de Niz, Alejandro and Chácon, Didiher and Fonseca, Luis and Otterstrom, Sarah and Yañez, Ingrid L. and LaCasella, Erin L. and Frey, Amy and Jensen, Michael P. and Dutton, Peter H.},
	month = jan,
	year = {2016},
	keywords = {mangroves, phylogeography, Critically endangered, Eretmochelys imbricata, management units, reproductive ecotype},
