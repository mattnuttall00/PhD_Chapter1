	number = {11},
	urldate = {2016-06-02},
	journal = {Ecology and Evolution},
	author = {Manlik, Oliver and McDonald, Jane A. and Mann, Janet and Raudino, Holly C. and Bejder, Lars and Krützen, Michael and Connor, Richard C. and Heithaus, Michael R. and Lacy, Robert C. and Sherwin, William B.},
	month = jun,
	year = {2016},
	keywords = {wildlife management, Bottlenose dolphin, cetacean, population dynamics, population viability, PVA, sensitivity analysis, Tursiops},
	pages = {3496--3512}
}

