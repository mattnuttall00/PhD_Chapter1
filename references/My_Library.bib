	urldate = {2018-10-08},
	journal = {Ecology and Society},
	author = {Liu, Jianguo and Hull, Vanessa and Batistella, Mateus and DeFries, Ruth and Dietz, Thomas and Fu, Feng and Hertel, Thomas W. and Izaurralde, R. Cesar and Lambin, Eric F. and Li, Shuxin and Martinelli, Luiz A. and McConnell, William J. and Moran, Emilio F. and Naylor, Rosamond and Ouyang, Zhiyun and Polenske, Karen R. and Reenberg, Anette and de Miranda Rocha, Gilberto and Simmons, Cynthia S. and Verburg, Peter H. and Vitousek, Peter M. and Zhang, Fusuo and Zhu, Chunquan},
