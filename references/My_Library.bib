	journal = {Ecology and Evolution},
	author = {Gough, Leonie A. and Sverdrup-Thygeson, Anne and Milberg, Per and Pilskog, Hanne E. and Jansson, Nicklas and Jonsell, Mats and Birkemoe, Tone},
