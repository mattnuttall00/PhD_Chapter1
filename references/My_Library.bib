@article{irwin_theory_2001,
	series = {Predicting {Land}-{Use} {Change}},
	title = {Theory, data, methods: developing spatially explicit economic models of land use change},
	volume = {85},
	issn = {0167-8809},
	shorttitle = {Theory, data, methods},
