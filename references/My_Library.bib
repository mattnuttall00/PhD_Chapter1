	month = apr,
	year = {2016},
	keywords = {Brown bear, monitoring, wolf, trophy hunting, abundance estimates, biological plausibility, Eurasian lynx, large carnivores, population growth, Romania},
	pages = {n/a--n/a}
}

@article{franca_space-for-time_2016,
