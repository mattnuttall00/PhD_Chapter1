@article{beerens_determining_2015-1,
	title = {Determining habitat quality for species that demonstrate dynamic habitat selection},
	volume = {5},
	copyright = {Published 2015. This article is a U.S. Government work and is in the public domain in the USA. Ecology and Evolution published by John Wiley \& Sons Ltd., This is an open access article under the terms of the Creative Commons Attribution License, which permits use, distribution and reproduction in any medium, provided the original work is properly cited.},
