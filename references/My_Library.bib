@article{duncan_life-history_2015,
	title = {Life-history attributes and resource dynamics determine intraspecific home-range sizes in {Carnivora}},
	volume = {1},
	copyright = {© 2015 The Authors Remote Sensing in Ecology and Conservation published by John Wiley \& Sons Ltd on behalf of Zoological Society of London., This is an open access article under the terms of the Creative Commons Attribution-NonCommercial-NoDerivs License, which permits use and distribution in any medium, provided the original work is properly cited, the use is non-commercial and no modifications or adaptations are made.},
	issn = {2056-3485},
	url = {http://onlinelibrary.wiley.com/doi/10.1002/rse2.6/abstract},
