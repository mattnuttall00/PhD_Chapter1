	urldate = {2015-12-02},
	journal = {Ecology and Evolution},
	author = {Luo, Arong and Lan, Haiqiang and Ling, Cheng and Zhang, Aibing and Shi, Lei and Ho, Simon Y. W. and Zhu, Chaodong},
