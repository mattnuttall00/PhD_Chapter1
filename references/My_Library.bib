@article{makino_effect_2015,
	title = {The {Effect} of {Applying} {Alternate} {IPCC} {Climate} {Scenarios} to {Marine} {Reserve} {Design} for {Range} {Changing} {Species}},
	volume = {8},
	copyright = {Copyright and Photocopying: © 2014 The Authors. Conservation Letters published by Wiley Periodicals, Inc., This is an open access article under the terms of the Creative Commons Attribution License, which permits use, distribution and reproduction in any medium, provided the original work is properly cited.},
