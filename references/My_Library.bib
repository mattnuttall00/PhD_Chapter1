	author = {Mattucci, Federica and Oliveira, Rita and Lyons, Leslie A. and Alves, Paulo C. and Randi, Ettore},
	month = jan,
	year = {2016},
	keywords = {microsatellites, ABC simulations, Bayesian clustering, conservation genetics, Felis silvestris, phylogeography, population structure, wild and domestic cat hybridization},
	pages = {3--22}
}

