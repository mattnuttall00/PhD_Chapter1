}

@article{melero_ecological_2018,
	title = {Ecological traps for large-scale invasive species control: {Predicting} settling rules by recolonising {American} mink post-culling},
	volume = {55},
	copyright = {© 2018 The Authors. Journal of Applied Ecology © 2018 British Ecological Society},
	issn = {1365-2664},
	shorttitle = {Ecological traps for large-scale invasive species control},
