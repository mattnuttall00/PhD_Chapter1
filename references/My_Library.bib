	urldate = {2018-05-30},
	journal = {Ecology},
	author = {McRae, Brad H. and Dickson, Brett G. and Keitt, Timothy H. and Shah, Viral B.},
	year = {2008},
	keywords = {habitat fragmentation, dispersal, gene flow, graph theory, reserve design, metapopulation theory, circuit theory, effective distance, isolation, landscape connectivity},
	pages = {2712--2724}
}

