	keywords = {wildlife management, Bottlenose dolphin, cetacean, population dynamics, population viability, PVA, sensitivity analysis, Tursiops},
	pages = {n/a--n/a}
}

@article{asbridge_mangrove_2016-1,
	title = {Mangrove response to environmental change in {Australia}'s {Gulf} of {Carpentaria}},
