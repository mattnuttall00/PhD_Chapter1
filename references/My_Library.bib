@article{mergey_identifying_2017,
	title = {Identifying environmental drivers of spatial genetic structure of the {European} pine marten ({\textless}{Emphasis} {Type}="{Italic}"{\textgreater}{Martes} martes{\textless}/{Emphasis}{\textgreater})},
